<p id="notice"><%= notice %></p>

<h2><%= member.name %><h2>

<p>
  <strong>Age:</strong>
  <%= member.age %>
</p>

<p>
  <strong>Company:</strong>
  <%= member.company %>
</p>

<p>
  <strong>Money:</strong>
  <%= member.money %>
  <% unless member.id == 1 %>
    <%= link_to "(give money)", pay_path(member) %>
  <% end %>
</p>

<p><%= link_to "(edit profile)", edit_member_path(member) %></p>

<% if member.recruiter %>
  <p><strong>Recruiter:</strong> <%= member.recruiter.name %></p>
<% end %>

<% if member.recruits.count > 0 %>
  <hr>
  <p><strong>Recruits</strong> <%= link_to "(add recruit)", recruit_path(member) %></p>
  <hr>
  <%= render 'member_listing', members: member.recruits %>
<% end %>

<%= link_to 'Back', members_path %>